#include<iostream>
using namespace std;
class binsearch
{
	public:
		int data()
		{
  int x,beg=0,pos,end,no,flag,c;
  cout<<"how many elements do you want to enter in array = ";
  cin>>x;
  int i,a[x];
  cout<<"Enter your elements in Array: ";
  for(i=0;i<x;i++)
  {
  cin>>a[i];
  }
  cout<<"\n\nelements present in Array: ";
  for(i=0;i<x;i++)
  {
  cout<<a[i]<<" ";
  }
  cout<<"\n\nenter the element want to search: ";
  cin>>no;
  pos=i/2;
  if(a[pos]==no)
  {
  	flag=1;
  	c=pos+1;
  }
  if(no<a[pos])
  {
  	for(i=0;i<=pos-1;i++)
  	{
  		if(a[i]==no)
  		{
  			flag=1;
  			c=i+1;
		}
	}
  }
  if(no>a[pos])
  {
  	  	for(i=pos+1;i<=x-1;i++)
  	{
  		if(a[i]==no)
  		{
  			flag=1;
  			c=i+1;
		}
	}
  }
  if(flag==1)
  {
  	cout<<"\n"<<no<<" element is present"<<" at position: "<<c;
  }
  else
  {
  	cout<<"element is not present";
  }
  }
};
int main()
{
	binsearch x;
	x.data();
	return 0;
}
